<div class='jobs-index'>
    <h1>Job Source: <%= source.name %></h1>

    <table class="table"k>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Company Name</th>
                <th scope="col">Job Title</th>
                <th scope="col">Job URL</th>
            </tr>
        </thead>
        <tbody>
            <% jobs.each do |job| %>
                <tr>
                    <th scope="row"><%= job.id %></th>
                    <td><%= job.company_name %></td>
                    <td><%= job.title %></td>
                    <td class="job-url"><%= link_to job.url, job.url %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate jobs %> 
</div>